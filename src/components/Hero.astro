<style>
  #hero {
    /* min-height: calc(90vh - 1rem); */
    min-height: calc(100vh - 50px);
  }

  .hero__name {
    line-height: 0.8;
    display: block;
    position: relative;

    &::after {
      content: "Grant Keller";
      text-shadow: 0px 0px 0.1em theme(colors.fuchsia.500 / 0.8);
      position: absolute;
      left: 0;
      top: 0;
      z-index: -1;
    }
  }

  #hero .huge {
    font-size: 30vw;
    margin-left: -0.1em;
    line-height: 0.7;
    letter-spacing: -0.1em;
  }

  #hero .huge .plus {
    font-size: 45vw;
    mix-blend-mode: difference;
    /* top: 50%;
    position: absolute;
    left: 50%; */
    line-height: 1;
    z-index: 100;
    /* transform: translate3d(-56%, -47%, 0); */
  }

  .gradient-burst {
    background: radial-gradient(
      ellipse at center center,
      rgba(0, 255, 200, 0.3) 0%,
      rgba(0, 255, 200, 0) 70%
    );
    opacity: 0.3;
    background-repeat: no-repeat;
    /* mix-blend-mode: overlay; */
    animation: burst 2s infinite ease-in-out;
  }

  @keyframes burst {
    0%,
    100% {
      transform: scaleY(1.2) scaleX(1.2) translateY(0%);
    }
    50% {
      transform: scaleY(1.7) scaleX(1.7) translateY(0%);
    }
  }
</style>
