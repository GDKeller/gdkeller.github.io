---
import Link from "./Link.astro";

const { project } = Astro.props;
const { data } = project;
const { title, client, startMonthYear, endMonthYear } =
  data;

// console.log("project", project);
console.log("start", startMonthYear)
const { Content } = await project.render();

---

<div class="mb-20 job-card">
  <div class="flex justify-start mb-2 text-xl">
    <h3 class="font-bold text-fuchsia-500">{title}</h3>
    <span class="block mx-2"> @ </span>
      {client}
  </div>

  <p class="mb-8 italic">
    {startMonthYear ? startMonthYear : null} -
    {endMonthYear ? endMonthYear : "Present"}
  </p>

  <div class="prose job-body">
    <Content />
  </div>
</div>

<style>
  .job-body {
    /* line-height: 1.2; */
    p {
      @apply mb-5;
    }
    li {
      list-style-type: disc;
      list-style-position: outside;
      @apply mb-2 ml-4 pl-2;
    }
  }
</style>
