---
import { Image } from "astro:assets";

import grantImg from "../images/headshots/grant-matched.jpg";
import ai1 from "../images/headshots/grant-headshot-casual-1.jpg";
import ai3 from "../images/headshots/grant-headshot-casual-2.jpg";
import ai4 from "../images/headshots/grant-headshot-professional-1.jpg";
import ai5 from "../images/headshots/grant-headshot-professional-2.jpg";
import ai6 from "../images/headshots/grant-headshot-professional-3.jpg";
import ai7 from "../images/headshots/grant-headshot-outdoor-1.jpg";
import ai8 from "../images/headshots/grant-headshot-outdoor-2.jpg";
import ai10 from "../images/headshots/grant-headshot-studio-1.jpg";
import ai12 from "../images/headshots/grant-headshot-studio-2.jpg";
