<div class="hire-me-container">
  <!-- Hire Me Button -->
  <button
    onclick="hire_me_modal.showModal()"
    class="group relative overflow-hidden border border-emerald-400/30 bg-black/40 px-6 py-3 font-prompt text-emerald-200 backdrop-blur-sm transition-all duration-300 hover:border-emerald-400/60 hover:bg-emerald-400/10 hover:text-emerald-100 hover:shadow-lg hover:shadow-emerald-400/20"
