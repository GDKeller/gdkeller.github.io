---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  imagePath: string;
  altText: string;
}

const { imagePath, altText } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/projects/*/*.{jpeg,jpg,png,gif}",
);

if (!images[imagePath]) {
  console.error(`Image not found: ${imagePath}`);
}
---

<div class="project-image relative">
  {
    images[imagePath] ? (
      <Image src={images[imagePath]()} alt={altText ?? "Project"} class="w-auto object-contain" />
    ) : null
  }
</div>
