---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  imagePath: string;
  altText: string;
  maxHeight?: string;
}

const { imagePath, altText, maxHeight } = Astro.props;

const images: any = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/projects/*/*.{jpeg,jpg,png,gif}",
);
// if (!images[imagePath])
//   throw new Error(
//     `"${imagePath}" does not exist in glob: "/src/images/pr√ßojects/*/*.{jpeg,jpg,png,gif}"`,
//   );
---

<div class="relative">
  {images[imagePath] ? <Image src={images[imagePath]()} alt={altText ?? "Project"} class="w-auto object-contain" style={maxHeight ? `max-height: ${maxHeight}` : "max-height: 28rem"} /> : null}
</div>
