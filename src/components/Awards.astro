---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import emmyImg from "../images/awards/emmy.webp";
import addyImg from "../images/awards/addy-gold.webp";
import cgwImg from "../images/awards/CGW_SIGGRAPH.webp";
import hackadayImg from "../images/awards/hackaday_gold.png";

interface Award {
  src: ImageMetadata;
  alt: string;
  name: string;
  subtitle: string;
  level: "gold" | "silver" | "bronze";
  count: number;
}

const awards: Award[] = [
  {
    src: cgwImg,
    alt: "CGW SIGGRAPH Best of Show",
    name: "Computer Graphics World",
    subtitle: "SIGGRAPH Best of Show",
    level: "silver",
    count: 1,
  },
  {
    src: emmyImg,
    alt: "Emmy Award",
    name: "Emmy Awards",
    subtitle: "Science, Narrative Short",
    level: "gold",
    count: 2,
  },
  {
    src: addyImg,
    alt: "Addy Award",
    name: "Addy Awards",
    subtitle: "Best of Show, Editors' Choice",
    level: "gold",
    count: 2,
  },
  {
    src: hackadayImg,
    alt: "Hackaday Superconference Badge Hacking Prize",
    name: "Hackaday Supercon",
    subtitle: "Badge Hacking Prize",
    level: "gold",
    count: 1,
  },
];
---

<div
  class="awards container mx-auto max-w-full px-8 md:max-w-7xl"
  role="region"
  aria-label="Awards and recognition"
>
  <h2 class="section-heading__glow mb-4 text-center font-bokor text-5xl md:text-6xl">Awards</h2>
  <p class="mx-auto mb-12 max-w-2xl text-center text-sm md:mb-16 md:text-base">
    Recognized multidisiciplinary excellence
  </p>

  <div
    class="flex flex-col items-center justify-center gap-12 sm:gap-16 md:flex-row md:flex-wrap md:gap-20 lg:flex-nowrap"
  >
    {
      awards.map((award) => (
        <div class="award-item group flex w-full flex-col items-center text-center md:max-w-72 lg:w-auto">
          <div class="relative mb-4 h-28 w-28 md:h-32 md:w-32 lg:h-44 lg:w-44">
            <Image
              src={award.src}
              alt={award.alt}
              class={`transition-drop-shadow h-full w-full object-contain ${award.level === "gold" ? "drop-shadow-[0_0_1rem_rgba(250,220,160,0.4)]" : award.level === "silver" ? "drop-shadow-[0_0_1rem_rgba(192,192,192,0.4)]" : "drop-shadow-[0_0_1rem_rgba(205,127,50,0.3)]"}`}
              loading="eager"
            />
            {award.count > 1 && (
              <span class="absolute -top-2 right-2 flex h-8 w-8 items-center justify-center rounded-full border-2 border-emerald-200/20 text-base font-bold text-emerald-200 md:h-10 md:w-10 md:text-lg">
                x{award.count}
              </span>
            )}
          </div>
          <h3 class="mb-1 text-lg font-semibold text-emerald-100 md:text-lg lg:text-lg xl:text-xl">
            {award.name}
          </h3>
          <p class="text-sm text-emerald-200">{award.subtitle}</p>
        </div>
      ))
    }
  </div>
</div>
