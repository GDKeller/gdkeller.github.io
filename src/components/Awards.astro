---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import emmyImg from "../images/awards/emmy.webp";
import addyImg from "../images/awards/addy-gold.webp";
import cgwImg from "../images/awards/CGW_SIGGRAPH.webp";

interface Award {
  src: ImageMetadata;
  alt: string;
  name: string;
  subtitle: string;
  count: number;
}

const awards: Award[] = [
  {
    src: cgwImg,
    alt: "CGW SIGGRAPH Best of Show",
    name: "Computer Graphics World",
    subtitle: "SIGGRAPH Best of Show",
    count: 1,
  },
  {
    src: emmyImg,
    alt: "Emmy Award",
    name: "Emmy Awards",
    subtitle: "Science, Narrative Short",
    count: 2,
  },
  {
    src: addyImg,
    alt: "Addy Award",
    name: "Addy Awards",
    subtitle: "Best of Show, Editors' Choice",
    count: 2,
  },
];
---

<div
  class="awards container mx-auto max-w-5xl px-8"
  role="region"
  aria-label="Awards and recognition"
>
  <h2 class="mb-4 text-center font-bokor text-5xl md:text-6xl">Awards</h2>
  <p class="mx-auto mb-12 max-w-2xl text-center text-sm md:mb-16 md:text-base">
    Recognized for excellence in software, TV & Film, and digital advertising
  </p>

  <div class="flex flex-col items-center justify-center gap-12 sm:flex-row sm:gap-16 md:gap-20">
    {
      awards.map((award) => (
        <div class="award-item group flex flex-col items-center text-center">
          <div class="relative mb-4 h-28 w-28 md:h-36 md:w-36 lg:h-44 lg:w-44">
            <Image
              src={award.src}
              alt={award.alt}
              class="h-full w-full object-contain drop-shadow-[0_0_15px_rgba(52,211,153,0.3)] transition-transform duration-300 group-hover:scale-105"
              loading="eager"
            />
            {award.count > 1 && (
              <span class="absolute -top-2 right-2 flex h-8 w-8 items-center justify-center rounded-full border-2 border-emerald-200/20 text-base font-bold text-emerald-200 md:h-10 md:w-10 md:text-lg">
                x{award.count}
              </span>
            )}
          </div>
          <h3 class="mb-1 text-lg font-semibold text-emerald-100 md:text-xl">{award.name}</h3>
          <p class="text-sm text-emerald-200/50">{award.subtitle}</p>
        </div>
      ))
    }
  </div>
</div>
