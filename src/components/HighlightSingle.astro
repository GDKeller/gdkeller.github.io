---
import Link from "./Link.astro";

const { job } = Astro.props;
const { data } = job;
const { company, companyWebsite, position, startMonthYear, endMonthYear } =
  data;

const { Content } = await job.render();
---

<div class="mb-32 job-card">
  <div class="flex flex-col justify-start mb-2 text-xl">
    <h3 class="font-bold text-fuchsia-500 text-2xl">{position}</h3>
    <!-- <span class="block mx-2"> @ </span> -->
    <Link href={companyWebsite} target="_blank">
      {company}
    </Link>
  </div>

  <p class="mb-8 italic">
    {startMonthYear ? startMonthYear : null} -
    {endMonthYear ? endMonthYear : "Present"}
  </p>

  <div class="prose job-body">
    <Content />
  </div>
</div>

<style>
  .job-body {
    /* line-height: 1.2; */
    p {
      @apply mb-5;
    }
    li {
      list-style-type: disc;
      list-style-position: outside;
      @apply mb-2 ml-4 pl-2;
    }
  }
</style>
