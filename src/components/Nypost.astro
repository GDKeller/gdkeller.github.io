---
import Image from "astro/components/Image.astro";
import NypSpread from "../images/projects/site-spread.webp";
import NypostLogo from "../images/nypost-logo.svg?raw";
import statueOfLiberty from "../images/statue-of-liberty.jpg";
import Link from "./Link.astro";
---

<div
  class="container flex flex-col items-start justify-center max-w-full py-48 mx-auto mb-24 color__nyp-red--dark lg:flex-row"
>
  <span
    class="absolute top-0 left-0 z-0 w-full h-1/4 bg-gradient-to-b from-black to-transparent opacity-90"
  ></span>
  <span
    class="absolute bottom-0 left-0 z-0 w-full h-1/4 bg-gradient-to-t from-black to-transparent opacity-90"
  ></span>
  <div class="relative w-full px-12 -mb-24 lg:max-w-1/2 md:-mb-36 lg:mb-auto">
    <h3 class="sr-only">New York Post</h3>
    <div class="flex flex-col items-center mb-8 sm:flex-row">
      <div class="mx-auto max-w-1/2 sm:ml-auto">
        <div class="w-auto mx-auto font-bold text-white stat">
          <div
            class="flex items-end m-0 color__nyp-red--text font-bokor text-8xl sm:text-8xl md:text-7xl lg:text-7xl xl:text-9xl"
          >
            391 <span class="mb-4 ml-2 text-xl lg:text-3xl xl:text-5xl">million</span>
          </div>
          <div
            class="ml-2 -mt-4 text-2xl text-white stat-title font-bayon md:text-3xl lg:text-xl xl:text-4xl"
          >
            monthly pageviews
          </div>
        </div>
      </div>
      <div class="mx-auto max-w-1/2 sm:mr-auto">
        <div class="w-auto mx-auto font-bold text-white bg-opacity-0 color__nyp-red--text stat">
          <span
            class="flex items-end m-0 color__nyp-red--text font-bokor text-8xl sm:text-8xl md:text-7xl lg:text-7xl xl:text-9xl"
            >65 <span class="mb-4 ml-2 text-xl lg:text-3xl xl:text-5xl">million</span></span
          >
          <div
            class="ml-2 -mt-4 text-2xl text-white stat-title font-bayon md:text-3xl lg:text-xl xl:text-4xl"
          >
            unique visitors
          </div>
        </div>
      </div>
    </div>
    <div class="relative browser lg:top-0 lg:scale-110">
      <div class="nyp">
        <Image src={NypSpread} alt="New York Post" class="object-cover w-full h-full" />
      </div>
    </div>
  </div>
  <div class="z-10 flex justify-start w-full content-box">
    <div class="flex">
      <div class="">
        <div class="flex-col items-center w-full py-8 col color__nyp-red rounded-tl-md lg:py-4">
          <div class="relative w-full px-8 mx-auto max-w-72">
            <Fragment set:html={NypostLogo} />
          </div>
        </div>
        <div class="w-full p-8 pt-6 bg-black bg-opacity-100">
          <div class="block w-full mb-8 font-bold text-white">
            <p class="mb-4 text-lg">
              Senior User Experience Developer @ <Link
                href="https://alley.com/"
                class="color__nyp-red--text"
                target="_blank">Alley Interactive</Link
              >
            </p>
            <p class="mb-8 font-bold text-md">
              Worked closely with our client, the NYP editorial team, on the primary development
              team for all NYP digital properties.
            </p>
            <p class="mb-4 text-sm">
              Analyzed buinsess goals to pitch and lead improvement implementations. Team
              responsbile for mainting a world-class user experience at massive scale. Developed on
              custom enterprise stack hosted on <span
                class="inline-block color__nyp-red--text break-keep">WordPress VIP</span
              >
            </p>
            <ul class="text-white list-disc list-inside list">
              <li>Client collaboration</li>
              <li>Performance Tuning & Enhancement</li>
              <li>Troubleshooting complex systems & problems</li>
            </ul>
          </div>
          <span class="divider"></span>
          <div class="flex flex-col flex-wrap text-white sm:flex-row sm:items-center">
            <p class="font-bold text-md sm:text-md sm:mr-4">Technologies:</p>
            <ul
              class="flex flex-row gap-2 text-sm italic list sm:text-md sm:flex-row sm:flex-wrap sm:gap-4"
            >
              <li>WordPress</li>
              <li>React</li>
              <li>Typescript</li>
              <li>PHP</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="hidden w-full max-w-1/4 image__statueofliberty sm:block">
        <Image src={statueOfLiberty} alt="Statue of Liberty" class="object-cover w-full h-full" />
      </div>
    </div>

    <style>
      .browser {
        filter: drop-shadow(0.1rem 0.1rem 0.3rem rgba(0, 0, 0, 1));
      }
      .color__nyp-red {
        background-color: #c60800;
      }
      .color__nyp-red--text {
        color: #c60800;
      }
      .color__nyp-red--dark {
        background-color: #1e0b09;
      }
      .content-box {
        box-shadow: 0 0 1.2rem -0.4rem rgba(255, 0, 0, 0.1);
      }
    </style>
  </div>
</div>
